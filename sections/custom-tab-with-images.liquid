{%- style -%}
    #Section--{{ section.id }} {
      --PT: {{ section.settings.padding_top | default: 0 }}px;
      --PB: {{ section.settings.padding_bottom | default: 0 }}px;
    }
  {%- endstyle -%}

<style>

.custom-tab-wrapper{
    position: relative;
    max-width: 90%;
    height: 100vh;
    padding: 0;
}
.custom-tab-wrapper img{
    width:100%;
    height:100%;
    position:absolute;
    object-fit: cover;
}
.custom-tab-section-title{
    display: flex;
    max-width: 1440px;
    flex-direction: column;
    max-width: 90%;
    margin: 0 auto;
    justify-content: flex-start;
    gap: 20px;
}
.custom-tab-title{
    color: #272727;
    font-family: "Playfair Display";
    font-size: 48px;
    font-style: normal;
    font-weight: 400;
    line-height: 60px; 
    margin: 0;
  }
  .custom-tab-sub-title{
    color: #272727;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 24px; 
    margin-bottom: 40px;
    margin-top: 0;
  }

  .custom-tab {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 12px;
    max-width: 90%;
    margin: 0 auto;
  }

  .custom-tab a {
    display: flex;
    padding: 12px 0;
    align-items: center;
    text-decoration: none;
    font-size: 27px;
    color: #585656;
    cursor: pointer;
    margin-bottom: 1rem;
  }

  .custom-tab a.active {
    text-decoration: underline;
    color: black;
  }
</style>

<div id="Section--{{ section.id }}" class="wrapper--full section-padding">

<div class="custom-tab-section-title">
  <h2 class="custom-tab-title">
    {{ section.settings.title }}
  </h2>
  <p class="custom-tab-sub-title">
    {{ section.settings.subtitle }}
  </p>
</div>

    <div class="custom-tab">
    <a href="#" data-image="{{ section.settings.first_image | img_url: 'master' }}" class="tab active">Tekla Evelina Severin</a>
    <a href="#" data-image="{{ section.settings.second_image | img_url: 'master' }}" class="tab ">Verner Panton</a>
    <a href="#" data-image="{{ section.settings.third_image | img_url: 'master' }}" class="tab ">Alvar Aalto</a>

</div>
<div class="custom-tab-wrapper">
    <img id="first" src="{{ section.settings.first_image | img_url: 'master' }}">
</div>
</div>


<script>
 document.addEventListener("DOMContentLoaded", function () {
    const tabs = document.querySelectorAll(".custom-tab .tab");
    const firstImage = document.getElementById("first");

    tabs.forEach(tab => {
      tab.addEventListener("click", function (e) {
        e.preventDefault();

        tabs.forEach(t => t.classList.remove("active"));
        this.classList.add("active");

        const newImage1 = this.getAttribute("data-image");

        firstImage.style.opacity = "0";
        setTimeout(() => {
          firstImage.src = newImage1;

          firstImage.style.opacity = "1";
        }, 300); 
      });
    });
  });
</script>




{% schema %}
    {
      "name": "custom-tab-images",
      "settings": [
        {
          "type": "image_picker",
          "id": "first_image",
          "label": "First Image"
        },
        {
          "type": "image_picker",
          "id": "second_image",
          "label": "Second Image"
        },
        {
          "type": "image_picker",
          "id": "third_image",
          "label": "Third Image"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Shop Iconic Designs"
        },
        {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle"
        },
        {
        "type": "header",
        "content": "Section padding"
        },
        {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 0
        },
        {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 0
        }

      ],
      "presets": [
        {
          "name": "custom-tab-images"
        }
      ]
    }
    {% endschema %}
    